<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="field_label_widget_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ripple_button_outer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_button_selector</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="general_button">
        <item name="android:background">@drawable/ripple_button_selector</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_margin">@dimen/text_space_padding</item>
    </style>

    <style name="license_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_item_padding</item>
    </style>

    <style name="dialog_text_general">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/default_item_padding</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

</resources>